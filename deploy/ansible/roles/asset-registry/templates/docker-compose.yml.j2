version: "3"
services:
  mongodb:
    image: mongo:latest
    container_name: mongodb
    restart: unless-stopped
    expose:
      - 27017
    environment:
      MONGO_INITDB_ROOT_USERNAME: "{{ mongoDBUser }}"
      MONGO_INITDB_ROOT_PASSWORD: "{{ mongoDBPassword }}"
    volumes:
      - ./mongodb_data:/data/db
    networks:
      - back-tier

  asset-registry:
    image: angelocapossele/asset-registry
    command: >
      --basicAuthUser=IOTAisCool
      --basicAuthPassword=WeAreThereforeCool
    ports:
      - "80:80"
    depends_on:
      - mongodb
    networks:
      - front-tier

networks:
  back-tier:
    driver: bridge
  front-tier:
    driver: bridge